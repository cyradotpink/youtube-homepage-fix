{
  "manifest_version": 3,
  "name": "YouTube Homepage Fix",
  "version": "0.1.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-homepage-fix@cyra.pink"
    }
  },
  "description": "Configure the number of video items per row on YouTube's homepage.",
  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
