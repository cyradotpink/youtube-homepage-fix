{
  "manifest_version": 3,
  "name": "YouTube Homepage Fix",
  "version": "0.1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-homepage-fix@cyra.pink"
    }
  },
  "description": "Makes the number of video items per row on YouTube's homepage configurable",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["fix.js"],
      "world": "MAIN"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
